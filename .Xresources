!!! urzvt customization
!!! enable extensions; no spaces between them
!URxvt.perl-ext-common: extension_name_1,extension_name_2,etc

!!! testing out different fonts and decreasing the spacing
URxvt.font: xft:xos4 Terminus:pixelsize=16
URxvt.letterSpace: 0

!!! set up the colors
!!! first line normal, second line bright
! black
URxvt*color0:  #000000
URxvt*color8:  #555555
! red
URxvt*color1:  #B40000
URxvt*color9:  #FF0000
! green
URxvt*color2:  #00AA00
URxvt*color10: #00FF00
! yellow
URxvt*color3:  #AAAA00
URxvt*color11: #FFFF00
! blue
URxvt*color4:  #5555AA
URxvt*color12: #6464FF
! magenta
URxvt*color5:  #AA00AA
URxvt*color13: #FF00FF
! cyan
URxvt*color6:  #00AAAA
URxvt*color14: #00FFFF
! white
URxvt*color7:  #AAAAAA
URxvt*color15: #FFFFFF

!!! determine the background color and text color
URxvt.foreground: #AAAAAA
!URxvt.cursorColor: 
URxvt.background: #000000

!!! disable the scroll bar
URxvt*scrollBar: false

!!! specify colors for italics and bold
!URxvt.colorBD: white
!URxvt.colorIT: green

!!! do not scroll with output
!URxvt*scrollTtyOutput: false

!!! scroll in relation to buffer (with mouse scroll or Shift+PageUp)
!URxvt*scrollWithBuffer: true

!!! scroll back to the bottom on keypress
!URxvt*scrollTtyKeypress: true

!!! make urls in the terminal clickable and enable the clipboard function
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
